<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal"
    >

    <Button
        android:id="@+id/btn_upload_img_prod"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/upload_img_pro"
        style="@style/btn_textBox1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:drawableRight="@android:drawable/ic_menu_upload"
        />
    <Button
        android:id="@+id/btn_upload_img_nutricion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/upload_img_nut"
        style="@style/btn_textBox1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:drawableRight="@android:drawable/ic_menu_upload"
        />

</LinearLayout>